<cdk:root xmlns="http://jboss.org/schema/richfaces/cdk/xhtml-el" xmlns:cdk="http://jboss.org/schema/richfaces/cdk/core"
    xmlns:cc="http://jboss.org/schema/richfaces/cdk/jsf/composite" xmlns:c="http://jboss.org/schema/richfaces/cdk/jstl/core"
    xmlns:xi="http://www.w3.org/2001/XInclude">
    <cc:interface>
        <cdk:class>nf.co.fonk.richfaces.component.renderkit.InputCaptchaRenderer</cdk:class>
        <cdk:superclass>org.richfaces.renderkit.InputRendererBase</cdk:superclass>
        <cdk:component-family>javax.faces.Input</cdk:component-family>
        <cdk:renderer-type>nf.co.fonk.richfaces.component.InputCaptchaRenderer</cdk:renderer-type>
    </cc:interface>
    <cc:implementation>
		<img id="#{clientId}" class="#{component.attributes['styleClass']}" src="data:image/png;base64,#{component.attributes['imageData']}">
        </img>
    </cc:implementation>
</cdk:root>
